@using Compang.MVC3.DAL.Models;
@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>

<a asp-action="Create" asp-controller="Department" class="btn btn-primary"> Create Department </a>

@if (Model.Any())
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Date Of Creation</th>
                <th>Update</th>
                <th>Delete</th> <!-- ✅ Fixed closing tag -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.CreateAt</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id"  class="btn btn-warning">Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h4 class="mt-4 alert alert-info">There are no departments :(</h4>
    </div>
}
